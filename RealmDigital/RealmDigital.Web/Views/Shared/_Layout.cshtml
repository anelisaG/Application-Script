<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ream Digital</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/site/js")
    @RenderSection("Javascript", required: false)

</head>
<body>
    <div>
        <div class="container">
            <div class="navbar-header">
                <div class="logo-div">
                    <a href="www.realmdigital.co.za/">
                        <img src="~/Content/Images/Realmdigital-Logo.svg" class="pull-left company-logo" />
                    </a>
                </div>

            </div>

        </div>
    </div><br />
    <div class="navbar navbar-inverse navbar-default nav-inverse-color">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div style="color:white">
                    @Html.ActionLink("Realm Digital", "Index", "Home", new { area = "" }, new { @class = "navbar-brand link-text-color" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav link-text-color">
                    <li>@Html.ActionLink("Contact", "MaintainContactDetails", "Contact")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       
        <footer>
          
            <p>&copy; @DateTime.Now.Year - Phonebook </p>
        </footer>
    </div>
</body>
</html>
